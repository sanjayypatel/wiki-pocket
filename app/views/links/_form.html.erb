<%= form_for link do |f| %>
  <div class="form-group pull-right">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div><br>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', autocomplete: :off %>
  </div>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.url_field :url, class: 'form-control', autofocus: true, autocomplete: :off %>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, "Tags (separated by commas)" %>
    <%= f.text_field :tag_list, value: link.tag_list.to_s, class: 'form-control', autofocus: true, autocomplete: :off %>
  </div>
<% end %>