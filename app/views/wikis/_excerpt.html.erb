<div class="panel panel-info">
  <div class="panel-heading clearfix">
    <h4 class="pull-left"><%= link_to wiki.title, wiki_path(wiki) %></h4>
    <%= render partial: 'wikis/controls', locals: {wiki: wiki} %>
  </div>
  <div class="panel-body">
  	<button class="wiki-toggle btn btn-sm btn-default">Show</button>
  	<div class="wiki-excerpt-content hidden">
	  	<p><%= markdown_to_html wiki.body %></p>
	  </div>
  </div>
  <div class="panel-footer">
    <p>Links: <%= links_list(wiki.links) %></p>
    <p>Tags: <%= tags_to_links(wiki.tag_list) %></p>
  </div>
</div>