<%= form_for wiki do |f| %>
  <div class="form-group pull-right">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div><br>
  <% if current_user.is_owner_of?(wiki) && current_user.premium? %>
    <div class="form-group">
      <%= f.label :private, class: 'checkbox' do %>
      <%= f.check_box :private %> Private wiki
    <% end %>
  </div>
<% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', autofocus: true, autocomplete: false %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <div id="epiceditor"><%= f.text_area :body, id: 'my-edit-area', autocomplete: false %></div>
  </div>
  <script>
    var opts = {
      theme: {
        base: '/themes/base/epiceditor.css',
        preview: '/themes/preview/preview-light.css',
        editor: '/themes/editor/epic-light.css'
      },
      autogrow: false
    }
    var editor = new EpicEditor().load(opts);
  </script>
<% end %>
