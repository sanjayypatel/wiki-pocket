<%= form_for wiki do |f| %>
  <div class="form-group">
    <%= f.submit "Save", class: 'wp-button' %>
  </div><br>
  <% if current_user.is_owner_of?(wiki) && current_user.premium? %>
    <div class="form-group">
      <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private wiki
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', autofocus: true, autocomplete: :off %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 50, autocomplete: :off %>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, "Tags (separated by commas)" %>
    <%= f.text_field :tag_list, value: wiki.tag_list.to_s, class: 'form-control', autofocus: true, autocomplete: :off %>
  </div>
<% end %>
